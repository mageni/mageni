  script_tag(name:"insight", value:"An integer overflow exists in HAProxy 2.0 through 2.5 in htx_add_header that can be exploited to perform an HTTP request smuggling attack, allowing an attacker to bypass all configured http-request HAProxy ACLs and possibly other ACLs.(CVE-2021-40346)");

  script_tag(name:"affected", value:"'haproxy' package(s) on Huawei EulerOS V2.0SP9(x86_64).");

