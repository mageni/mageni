  if(!isnull(res = isrpmvuln(pkg:"golang", rpm:"golang~1.20.10~2.fc38", rls:"FC38"))) {
    report += res;
  }

  if(report != "") {
    security_message(data:report);
  } else if(__pkg_match) {
    exit(99);
  }
  exit(0);
