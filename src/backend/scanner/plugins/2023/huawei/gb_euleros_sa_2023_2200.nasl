  script_tag(name:"severity_date", value:"2022-06-28 16:08:00 +0000 (Tue, 28 Jun 2022)");

  script_name("Huawei EulerOS: Security Advisory for libjpeg-turbo (EulerOS-SA-2023-2200)");
