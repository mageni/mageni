  script_tag(name:"creation_date", value:"2022-12-16 12:29:38 +0530 (Fri, 16 Dec 2022)");
  script_name("Apple iCloud Security Updates (HT213538)");

  script_tag(name:"summary", value:"Apple iCloud is prone to multiple vulnerabilities.");

  script_tag(name:"vuldetect", value:"Checks if a vulnerable version is
