include("version_func.inc");

if(!infos = get_app_version_and_location(cpe:CPE, exit_no_version:TRUE))
  exit(0);

vers = infos["version"];
path = infos["location"];

if(version_is_less(version:vers, test_version:"14.1")) {
  report = report_fixed_ver(installed_version:vers, fixed_version:"14.1", install_path:path);
  security_message(port:0, data:report);
  exit(0);
}

exit(99);
